<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kpu.googlelogintest.activitys.CarInfoActivity"
    android:orientation="vertical"
    android:background="#D9E5FF">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:gravity="center">

        <TableRow>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F15F5F"
                android:text="사용자 이름 : "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <EditText
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_username"
                android:focusable="false"
                android:clickable="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:gravity="center"
                android:paddingTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량ID : "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:gravity="center"
                android:paddingTop="50dp"
                android:id="@+id/editText_carid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"

                />
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="center"
                android:paddingTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량명 : "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:gravity="center"
                android:paddingTop="50dp"
                android:id="@+id/editText_carname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"/>
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="center"
                android:paddingTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배기량 : "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:gravity="center"
                android:paddingTop="50dp"
                android:id="@+id/editText_volum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="center"
                android:paddingTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연료 종류 : "
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <EditText
                android:gravity="center"
                android:paddingTop="50dp"
                android:id="@+id/editText_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="center"
                android:paddingTop="50dp"
                android:id="@+id/data5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복합 연비 : "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:gravity="center"
                android:paddingTop="50dp"
                android:id="@+id/editText_fuel_efi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>