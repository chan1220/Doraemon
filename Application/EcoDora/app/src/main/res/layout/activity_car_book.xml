<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ecodora.CarBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_search"
            android:fontFamily="@font/nanum_pen_big"
            android:text="2018-10-01" />

        <Button
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_search"
            android:fontFamily="@font/nanum_pen_big"
            android:text="2018-10-31" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_search"
            android:fontFamily="@font/nanum_pen_big"
            android:text="Search"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="#EAEAEA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/nanum_pen_big"
        android:orientation="vertical">

        <EditText
            android:gravity="center"
            android:id="@+id/edt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/nanum_pen_big"
            android:inputType="textPersonName" />

        <EditText
            android:gravity="center"
            android:id="@+id/edt_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/nanum_pen_big"
            android:inputType="textPersonName" />

        <EditText
            android:gravity="center"
            android:id="@+id/edt_fef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/nanum_pen_big"
            android:inputType="textPersonName" />

        <EditText
            android:gravity="center"
            android:id="@+id/edt_fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/nanum_pen_big"
            android:inputType="textPersonName" />
    </LinearLayout>


</LinearLayout>